{
  "name": "certidao-app",
  "version": "1.0.1",
  "description": "Hidro Forte - Emiss찾o de Certid천es Fiscais",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win nsis",
    "build:dir": "electron-builder --win dir",
    "publish": "electron-builder --win nsis --publish always"
  },
  "keywords": [
    "certidao",
    "cnpj",
    "fiscal"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:LuanOliveiraBrito/certidaohidroforte.git"
  },
  "build": {
    "appId": "com.hidroforte.certidoes",
    "productName": "Hidro Forte - Emiss찾o de Certid천es",
    "publish": [
      {
        "provider": "github",
        "owner": "LuanOliveiraBrito",
        "repo": "certidaohidroforte"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "logo.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "logo.ico",
      "uninstallerIcon": "logo.ico",
      "artifactName": "HidroForte-Certidoes-Setup-${version}.exe"
    },
    "files": [
      "src/**/*",
      "logo.ico",
      "logo.png",
      "package.json",
      "node_modules/**/*",
      "!node_modules/puppeteer/.local-chromium/**/*",
      "!chrome-bundled/**/*"
    ],
    "extraResources": [
      {
        "from": "chrome-bundled",
        "to": "chrome-win64",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": false
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^17.2.4",
    "electron-updater": "^6.7.3",
    "firebase-admin": "^13.6.1",
    "iconv-lite": "^0.6.3",
    "node-capmonster": "^0.4.5",
    "nodemailer": "^8.0.1",
    "pdf-parse": "^2.4.5",
    "puppeteer": "^21.6.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  }
}
